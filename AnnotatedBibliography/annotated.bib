}

@article{ringlaben_accessibility_2014,
	title = {Accessibility of American University Special Education Departments’ Web sites},
	volume = {13},
	issn = {1615-5297},
	url = {https://doi.org/10.1007/s10209-013-0302-7},
	doi = {10.1007/s10209-013-0302-7},
	abstract = {In the last 20 years, the World Wide Web (Web) has gone from being the means of disseminating information for a few scientists to a universal means of disseminating information across the globe. While the Web provides an unprecedented level of access to information for many, if not properly designed, Web sites can actually create a number of barriers to information access to persons with disabilities. The purpose of this study was to evaluate the accessibility of home pages of University Departments of Special Education. A total of 51 Special Education departmental Web sites were located using a popular online search engine and evaluated for accessibility. Two Web site evaluation programs were used to determine whether the Web sites meet minimum accessibility guidelines, and one of them was used to quantify the number of accessibility errors on each site. The results indicated that most (97 \%) of the pages evaluated had accessibility problems, many (39 \%) of which were severe and should be given a high priority for correcting. The good news is the majority of errors can easily be corrected. The work reflects a need for Departments of Special Education to examine the accessibility of their home pages. Direction for improving accessibility is provided.},
	pages = {249--254},
	number = {2},
	journaltitle = {Universal Access in the Information Society},
	shortjournal = {Univ Access Inf Soc},
	author = {Ringlaben, Ravic and Bray, Marty and Packard, Abbot},
	urldate = {2022-01-19},
	date = {2014-06-01},
	langid = {english},
	annote = {The authors provide a nice historical perspective of web accessibility in the Background section. They reviewed 44 postsecondary Departments of Special Education home pages using the automated tool Bobby to check for WCAG 1.0 compliance and AChecker for WCAG 2.0 compliance. 97\% of the webpages reviewed had at least one significant accessibility error.}
}

@article{green_web_2009,
	title = {Web Accessibility and Accessibility Instruction},
	volume = {6},
	issn = {1536-7967},
	url = {https://doi.org/10.1080/15367960802247825},
	doi = {10.1080/15367960802247825},
	abstract = {Section 508 of the Americans with Disabilities Act ({ADA}) mandates that programs and services be accessible to people with disabilities. While schools of library and information science ({SLIS}∗) and university libraries should model accessible Web sites, this may not be the case. This article examines previous studies about the Web accessibility of {SLIS} Web sites and university library Web sites supporting {SLIS} and builds on these studies by providing current data about {SLIS} opportunities for learning about accessible products and services for individuals with disabilities. This study looks at the nation's 12 highest-ranked {SLIS} and at their disability-related curricula. A {WebXACT}-compliance check is used to determine World Wide Web (W3C) compliance for {SLIS} and the main libraries. A survey is distributed to the {SLIS} to determine disability curricular offerings. A Web search of {SLIS} course descriptions for these schools provides clarification about course offerings. The compliance check gives cause for concern. The survey results indicate that most {SLIS} programs offer disability instruction: Specifically most {SLIS} programs offer instruction of Web accessibility. The mixed results from the survey and the compliance check might indicate that the individuals that are responsible for Web design on these campuses are not knowledgeable about W3C standards. The fact that {SLIS} students are being taught appropriate accessibility standards should indicate that the future of Web accessibility is brighter. (∗{SLIS} is used as a generic term throughout the article to refer to all library science, library and information science, information science, and other similar programs.)},
	pages = {116--136},
	number = {1},
	journaltitle = {Journal of Access Services},
	author = {Green, Ravonne A. and Huprich, Julia},
	urldate = {2022-01-19},
	date = {2009-02-02},
	keywords = {Disabled people, accessibility, accessible, accommodation, design, handicap, information services, information technology, libraries},
	annote = {The authors used the automated tool WebXACT to review university library websites to W3C standards. This paper includes a succinct list of Section 504 guidelines to make websites more accessible. It should be noted that the authors also evaluated accessibility training at each university's School of Library and Information Science Department and were optimistic that accessibility trends would be improving.}
}

@article{thompson_web_2010,
	title = {Web accessibility: A longitudinal study of college and university home pages in the northwestern United States},
	volume = {5},
